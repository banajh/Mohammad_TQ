@using InventopryWEB2026.Domin;
@model List<InventopryWEB2026.Domin.Employee>

@{
    ViewData["Title"] = "Employee";
}

<h2>Employees</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



